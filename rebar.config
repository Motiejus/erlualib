{port_env, [
    {"linux", "CFLAGS", ["$CFLAGS $(",
        "pkg-config --cflags lua5.1 2>/dev/null || ",
        "pkg-config --cflags lua5.2",
        ")"]
    },
    {"linux", "LDFLAGS", ["$LDFLAGS $(",
        "pkg-config --libs lua5.1 2>/dev/null || ",
        "pkg-config --libs lua5.2",
        ")"]
    }
]}.
{port_specs, [{"priv/liberlua.so", ["c_src/*.c"]}]}.
{cover_enabled, true}.
{cover_print_enabled, true}.

